<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".inputMk">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MATA KULIAH"
        android:textSize="24dp" />

    <ImageView
        android:layout_width="146dp"
        android:layout_height="101dp"
        android:src="@drawable/checklist" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/rounded_background"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editkodemk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_inputmk"
            android:hint="KODE MATA KULIAH"
            android:inputType="textAutoComplete" />


        <EditText
            android:id="@+id/editnamamk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_inputmk"
            android:hint="MATA KULIAH"
            android:inputType="textAutoComplete" />

        <EditText
            android:id="@+id/editjammk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_inputmk"
            android:hint="JAM KULIAH"
            android:inputType="textAutoComplete" />

        <EditText
            android:id="@+id/edithari"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_inputmk"
            android:hint="HARI"
            android:inputType="textAutoComplete" />

        <EditText
            android:id="@+id/editruang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_inputmk"
            android:hint="RUANG KULIAH"
            android:inputType="textAutoComplete" />

        <EditText
            android:id="@+id/editid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_inputmk"
            android:hint="NIDN"
            android:inputType="textAutoComplete" />

        <EditText
            android:id="@+id/editdosen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_inputmk"
            android:hint="DOSEN MATA KULIAH"
            android:inputType="textAutoComplete" />

        <Button
            android:id="@+id/btnedit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EDIT" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lihat Data Mata Kuliah? " />

            <Button
                android:id="@+id/btnlinklihatdata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="Klik disini" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>